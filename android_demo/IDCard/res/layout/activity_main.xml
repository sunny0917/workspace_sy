<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/bt_read_card"
	    android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/read_card"/>
    <Button
        android:id="@+id/bt_find_card"
	    android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/find_card"/>
    <Button
        android:id="@+id/bt_select_card"
	    android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/select_card"/>
    <Button
        android:id="@+id/bt_read"
	    android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/read__card"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    	
	    <ImageView 
	        android:id="@+id/iv_image"
	        android:layout_width="wrap_content"
        	android:layout_weight="1"
	        android:layout_height="wrap_content"/>
	    <TextView
	        android:id="@+id/tv_recv_data"
	        android:layout_width="wrap_content"
        	android:layout_weight="3"
        	android:textSize="20dip"
	        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
